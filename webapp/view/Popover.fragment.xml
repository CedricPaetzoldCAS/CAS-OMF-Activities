<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		title="{i18n>activities}"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="Right"
		initialFocus="email">
		<endButton>
			<Button text="x" press=".onPressClosePopover"></Button>
		</endButton>
		<content>
            <Text text="{orderView>/ButtonActivities/activities}"></Text>
		</content>
	</Popover>
</core:FragmentDefinition>
